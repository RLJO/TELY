<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_sale_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_config_online_confirmation_pay']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="apply_terms_conditions"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="apply_terms_conditions"/>
                        <div class="text-muted">
                            Permite agregar terminos y condiciones en presupuestos y reportes.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
